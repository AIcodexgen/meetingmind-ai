{
  "manifest_version": 3,
  "name": "MeetingMind AI",
  "version": "1.0.0",
  "description": "AI Meeting Assistant that records, transcribes, and generates insights",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "identity",
    "offscreen",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://teams.microsoft.com/*",
    "https://api.meetingmind.ai/*"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["src/content/google-meet.js"],
      "css": ["src/content/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.zoom.us/wc/*", "https://zoom.us/wc/*"],
      "js": ["src/content/zoom.js"],
      "css": ["src/content/styles.css"]
    },
    {
      "matches": ["https://teams.microsoft.com/*"],
      "js": ["src/content/teams.js"],
      "css": ["src/content/styles.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "options_page": "src/options/index.html",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/offscreen/offscreen.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "key": "$YOUR_EXTENSION_KEY",
  "oauth2": {
    "client_id": "$GOOGLE_OAUTH_CLIENT_ID",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }
}
